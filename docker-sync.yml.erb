# It makes sense to use Docker Sync until the native solution is as fast on macOS (see related Docker for Mac
# issue: https://github.com/docker/for-mac/issues/77).
---
version: '2'
syncs:
  <%= project_name %>_code:
    src: .
    sync_userid: 1000
    sync_groupid: 1000
    sync_args:
      - "-ignore='Path .git'"           # Ignore the main .git repo
      - "-ignore='BelowPath .git'"      # Also ignore .git repos in subfolders such as in composer vendor dirs
      - "-ignore='Path .gitignore'"
      - "-ignore='Path tmp/cache'"
